# set primary gruvbox colorscheme colors
set $bg #1d2021
set $red #fb4934
set $green #b8bb26
set $yellow #fabd2f
set $blue #268bd2
set $purple #d33682
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $brightbg #665c54
set $white #d5c4a1

bar {
    position top
    height 32
    tray_padding 0
    status_command i3blocks -c /home/luis/.config/i3blocks/i3blocks.conf
    #colors {
    #        background #1d2021
    #        statusline #d5c4a1
    #        separator  #d5c4a1
    #        focused_workspace  #1d2021 #1d2021 #fb4934
    #        active_workspace   #1d2021 #1d2021 #fe8019
    #        inactive_workspace #1d2021 #1d2021 #d5c4a1
    #        urgent_workspace   #1d2021 #1d2021 #cc241d
    #}
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $yellow
        # workspaces section            
        #                    border  backgr. text
        focused_workspace    $aqua $aqua $darkgray
        inactive_workspace   $darkgray $darkgray $yellow
        active_workspace     $darkgray $darkgray $yellow
        urgent_workspace     $red $red $bg
    }
}

# green gruvbox
# class                 border|backgr|text|indicator|child_border
client.focused          $green $green $darkgray $purple $yellow
client.focused_inactive $darkgray $darkgray $yellow $purple $brightbg
client.unfocused        $darkgray $darkgray $yellow $purple $brightbg
client.urgent           $red $red $white $red $red

# blue gruvbox
# class                 border|backgr|text|indicator|child_border
#client.focused          $blue $blue $darkgray $purple $darkgray
#client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
#client.unfocused        $darkgray $darkgray $yellow $purple $darkgray
#client.urgent           $red $red $white $red $red

# Screen brightness controls
bindsym XF86MonBrightnessUp exec brillo -A 5 && pkill -RTMIN+2 i3blocks
bindsym XF86MonBrightnessDown exec brillo -U 5 && pkill -RTMIN+2 i3blocks

# Sound control
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume $(pactl list short sinks | sed -e 's,^\([0-9][0-9]*\)[^0-9].*,\1,' | head -n 1) +5% && pkill -RTMIN+3 i3blocks
bindsym XF86AudioLowerVolume exec pactl set-sink-volume $(pactl list short sinks | sed -e 's,^\([0-9][0-9]*\)[^0-9].*,\1,' | head -n 1) -5% && pkill -RTMIN+3 i3blocks
bindsym XF86AudioMute exec pactl set-sink-mute $(pactl list short sinks | sed -e 's,^\([0-9][0-9]*\)[^0-9].*,\1,' | head -n 1) toggle && pkill -RTMIN+3 i3blocks

new_window pixel 1

# Startup programs
#
exec --no-startup-id redshift -c ~/.config/redshift.sway.conf
exec --no-startup-id xrdb -load ~/.Xresources
#

# move focused workspace
bindsym $mod+Shift+comma move workspace to output left,mode "default"
bindsym $mod+Shift+period move workspace to output right,mode "default"

include /etc/sway/config.d/*
