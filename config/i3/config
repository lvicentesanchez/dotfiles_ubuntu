# External monitor
#
bindsym $mod+m exec --no-startup-id xrandr --output DP1 --auto --left-of eDP1
bindsym $mod+Shift+m exec --no-startup-id xrandr --output DP1 --off

#hide_edge_borders both

# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 && pkill -RTMIN+2 i3blocks
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 && pkill -RTMIN+2 i3blocks

# Sound control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% && pkill -RTMIN+3 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% && pkill -RTMIN+3 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle && pkill -RTMIN+3 i3blocks

# Screen lock
bindsym $mod+Delete exec --no-startup-id dm-tool lock

# Visual tweaks
default_border pixel 1
